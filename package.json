{
  "name": "voice-api",
  "version": "1.0.0",
  "description": "Automated video audio description system using AWS AI services",
  "main": "src/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:performance": "jest --testPathPattern=tests/performance --maxWorkers=1",
    "test:accessibility": "jest --testPathPattern=tests/quality",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:accessibility",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "coverage:badge": "jest-coverage-badges --output ./badges",
    "report:performance": "node scripts/test-ci-scripts.js performance-report",
    "report:accessibility": "node scripts/test-ci-scripts.js accessibility-report",
    "check:performance": "node scripts/test-ci-scripts.js performance-thresholds",
    "check:wcag": "node scripts/test-ci-scripts.js wcag-compliance",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\" \"tests/**/*.{js,jsx,ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\" \"tests/**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.498.0",
