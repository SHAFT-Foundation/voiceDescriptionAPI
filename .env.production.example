# Voice Description API - Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# AWS Configuration (Required)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# S3 Buckets (Will be created automatically)
INPUT_S3_BUCKET=voice-description-api-input-production
OUTPUT_S3_BUCKET=voice-description-api-output-production

# Bedrock Configuration
NOVA_MODEL_ID=amazon.nova-pro-v1:0

# Polly Configuration  
POLLY_VOICE_ID=Joanna

# Processing Configuration
MAX_VIDEO_SIZE_MB=500
MAX_IMAGE_SIZE_MB=50
PROCESSING_TIMEOUT_MINUTES=30
IMAGE_PROCESSING_TIMEOUT_MINUTES=5

# Node.js Configuration
NODE_ENV=production
PORT=3000
NODE_OPTIONS=--max-old-space-size=2048

# Logging
LOG_LEVEL=info

# File Upload Configuration
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=524288000

# Optional: Render API Configuration (for automated deployment)
RENDER_API_KEY=your_render_api_key_here
RENDER_SERVICE_ID=your_render_service_id_here
RENDER_SERVICE_URL=https://voice-description-api.onrender.com

# Security (Optional - will be auto-generated if not provided)
JWT_SECRET=your_jwt_secret_here